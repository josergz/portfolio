---
import { Image } from "astro:assets";
import GitHubIcon from "../components/icons/github.astro";
import Astroicon from "./icons/astroicon.astro";
import Tailwind from "./icons/tailwind.astro";
import Javascript from "./icons/javascript.astro";
import Bootstrap from "./icons/bootstrap.astro";
import Html from "./icons/html.astro";
import Sass from "./icons/sass.astro";
import Css from "./icons/css.astro";
import Vscode from "./icons/vscode.astro";
import Link from "./icons/link.astro";

// Importación de imágenes desde la nueva ruta en src/assets/img/
import imgVscode from "../assets/img/vscodetheme-preview-1200.avif";
import imgPortfolio from "../assets/img/portfolio-preview-1200.webp";
import imgWeather from "../assets/img/weather-preview-1200.webp";
import imgAdvice from "../assets/img/advice-preview-1200.webp";

const TAGS = {
  ASTRO: {
    name: "Astro",
    class: "bg-slate-200 text-slate-800 dark:bg-slate-700 dark:text-slate-200",
    icon: Astroicon,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-slate-200 text-slate-800 dark:bg-slate-700 dark:text-slate-200",
    icon: Tailwind,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-slate-200 text-slate-800 dark:bg-slate-700 dark:text-slate-200",
    icon: Javascript,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-slate-200 text-slate-800 dark:bg-slate-700 dark:text-slate-200",
    icon: Bootstrap,
  },
  HTML: {
    name: "HTML",
    class: "bg-slate-200 text-slate-800 dark:bg-slate-700 dark:text-slate-200",
    icon: Html,
  },
  SASS: {
    name: "Sass",
    class: "bg-slate-200 text-slate-800 dark:bg-slate-700 dark:text-slate-200",
    icon: Sass,
  },
  CSS: {
    name: "CSS",
    class: "bg-slate-200 text-slate-800 dark:bg-slate-700 dark:text-slate-200",
    icon: Css,
  },
  VSCODE: {
    name: "VSCode",
    class: "bg-slate-200 text-slate-800 dark:bg-slate-700 dark:text-slate-200",
    icon: Vscode,
  },
};

const PROJECTS = [
  {
    title: "One Dark Vibrant Theme",
    description:
      "Un tema personalizado para Visual Studio Code, basado en One Dark con colores vibrantes.",
    link: "https://marketplace.visualstudio.com/items?itemName=josergz.one-dark-vibrant-theme",
    github: "https://github.com/josergz/one-dark-vibrant-theme",
    image: imgVscode,
    tags: [TAGS.VSCODE],
  },
  {
    title: "Porfolio de Programador Web",
    description:
      "Portafolio profesional creado con Astro y Tailwind, responsivo y optimizado.",
    link: "https://portfolio-one-khaki-21.vercel.app/",
    github: "https://github.com/josergz/portfolio",
    image: imgPortfolio,
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },
  {
    title: "Weather App",
    description:
      "App interactiva que muestra el clima actual consumiendo datos de una API pública.",
    link: "https://weather-app-itsr.vercel.app/",
    github: "https://github.com/josergz/weather_app",
    image: imgWeather,
    tags: [TAGS.JAVASCRIPT, TAGS.BOOTSTRAP],
  },
  {
    title: "Advice Generator",
    description:
      "Generador de consejos aleatorios consumiendo una API dinámica.",
    link: "https://advice-generator-app-lemon.vercel.app/",
    github: "https://github.com/josergz/advice-generator-app",
    image: imgAdvice,
    tags: [TAGS.HTML, TAGS.CSS, TAGS.SASS, TAGS.JAVASCRIPT],
  },
];
---

<section
  id="projects"
  class="flex w-full scroll-mt-20 flex-col space-y-12 overflow-hidden p-4 py-12 md:py-16 lg:py-20"
>
  <div
    class="reveal-container flex flex-col items-center gap-4 text-center opacity-0"
  >
    <h2
      class="text-balance text-3xl font-bold tracking-tight text-slate-900 dark:text-white md:text-5xl"
    >
      Proyectos destacados
    </h2>
    <p
      class="mx-auto mt-6 max-w-2xl text-justify text-lg font-medium leading-8 text-slate-800 dark:text-slate-200 md:text-center md:text-xl"
    >
      Una selección de mis trabajos más recientes donde combino diseño,
      funcionalidad y rendimiento.
    </p>
  </div>

  <div
    class="m-auto grid w-full max-w-5xl grid-cols-1 justify-center gap-8 md:grid-cols-2"
  >
    {
      PROJECTS.map(
        ({ image, title, description, tags, link, github }, index) => (
          <article
            class="project-card group relative flex translate-y-10 flex-col overflow-hidden rounded-2xl border border-slate-200 bg-white/80 opacity-0 shadow-sm backdrop-blur-sm transition-all duration-500 hover:-translate-y-3 hover:shadow-2xl hover:shadow-blue-500/20 dark:border-slate-700 dark:bg-slate-800"
            style={`--index: ${index}`}
          >
            <div class="pointer-events-none absolute inset-0 bg-gradient-to-br from-blue-600/10 to-transparent opacity-0 transition-opacity duration-500 group-hover:opacity-100" />

            <div class="relative h-48 overflow-hidden">
              <Image
                src={image}
                alt={`Vista previa de ${title}`}
                width={500}
                height={280}
                loading="lazy"
                class="h-full w-full object-cover transition-transform duration-700 ease-out group-hover:rotate-1 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-black/0 transition-colors duration-500 group-hover:bg-black/10" />
            </div>

            <div class="relative z-10 flex flex-1 flex-col p-6">
              <h3 class="text-xl font-bold text-slate-900 transition-colors duration-300 group-hover:text-blue-700 dark:text-white dark:group-hover:text-blue-400">
                {title}
              </h3>

              <div class="mt-2 flex flex-wrap gap-2">
                {tags.map((tag) => (
                  <span
                    class={`flex items-center gap-x-1 rounded-full text-[10px] font-black uppercase tracking-tighter ${tag.class} border border-slate-300/30 px-2 py-0.5`}
                  >
                    <tag.icon class="size-3" aria-hidden="true" />
                    {tag.name}
                  </span>
                ))}
              </div>

              <p class="mt-3 line-clamp-2 text-sm leading-relaxed text-slate-700 dark:text-slate-300">
                {description}
              </p>

              <div class="mt-6 flex gap-3">
                <a
                  href={github}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`Ver código del proyecto ${title}`}
                  class="inline-flex flex-1 items-center justify-center gap-2 rounded-xl border border-slate-200 bg-slate-100 px-3 py-2.5 text-xs font-bold text-slate-900 transition-all hover:bg-slate-200 dark:border-slate-600 dark:bg-slate-700/50 dark:text-white dark:hover:bg-slate-600"
                >
                  <GitHubIcon class="size-4" /> Código
                </a>
                <a
                  href={link}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`Ver demo del proyecto ${title}`}
                  class="inline-flex flex-1 items-center justify-center gap-2 rounded-xl bg-blue-700 px-3 py-2.5 text-xs font-bold text-white shadow-lg shadow-blue-600/20 transition-all hover:bg-blue-800"
                >
                  <Link class="size-3" /> Demo
                </a>
              </div>
            </div>
          </article>
        ),
      )
    }
  </div>
</section>

<style>
  .reveal-container.is-visible {
    animation: revealTitle 0.8s cubic-bezier(0.22, 1, 0.36, 1) forwards;
  }
  @keyframes revealTitle {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(30px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
  .project-card {
    transition: all 0.7s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .project-card.is-visible {
    opacity: 1 !important;
    transform: translateY(0) !important;
    transition-delay: calc(var(--index) * 150ms);
  }
</style>

<script>
  const observerOptions = { threshold: 0.15 };
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) entry.target.classList.add("is-visible");
    });
  }, observerOptions);

  const headerContainer = document.querySelector("#projects .reveal-container");
  if (headerContainer) observer.observe(headerContainer);
  document
    .querySelectorAll(".project-card")
    .forEach((el) => observer.observe(el));
</script>

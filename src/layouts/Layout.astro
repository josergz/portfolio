---
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/footer.astro";
import ScrollToTop from "../components/ScrollToTop.astro";

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
const siteUrl = "https://www.josergz.dev/";
const siteImg = "/img/og-preview.png";
const typeUrl = "website";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={siteUrl} />

    <meta property="og:url" content={siteUrl} />
    <meta property="og:type" content={typeUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(siteImg, Astro.url)} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="josergz.dev" />
    <meta property="twitter:url" content={siteUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(siteImg, Astro.url)} />
  </head>

  <body
    class="relative flex min-h-screen flex-col bg-gray-50 transition-colors duration-300 dark:bg-slate-900"
  >
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <ScrollToTop />
    <Footer />
  </body>
</html>

<style is:global>
  html {
    /* "Onest Variable" con font-display: swap (Fontsource lo incluye por defecto) */
    font-family:
      "Onest Variable",
      system-ui,
      -apple-system,
      sans-serif;
    scroll-behavior: smooth;
  }

  /* Mejora de accesibilidad: Contraste y legibilidad */
  body {
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
  }

  section[id] {
    scroll-mt: 5rem;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }

  /* Scrollbar personalizado con buen contraste */
  ::-webkit-scrollbar {
    width: 8px;
  }

  .dark ::-webkit-scrollbar {
    background-color: #0f172a;
  }

  .dark ::-webkit-scrollbar-thumb {
    background-color: #334155;
    border-radius: 10px;
  }
</style>

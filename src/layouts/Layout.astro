---
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/footer.astro";

interface Props {
  title: string;
  description: string;
}
const siteUrl = "https://josergz.dev",
  siteImg = "/img/og-preview.png",
  typeUrl = "website";

const { description, title } = Astro.props;
import ScrollToTop from "../components/ScrollToTop.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- HTML Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <!-- URL canÃ³nica -->
    <link rel="canonical" href="https://www.josergz.dev/" />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={siteUrl} />
    <meta property="og:type" content={typeUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={siteImg} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="josergz.dev" />
    <meta property="twitter:url" content={siteUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={siteImg} />
  </head>

  <body
    class="relative flex min-h-screen flex-col bg-gray-50 dark:bg-slate-900"
  >
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <ScrollToTop />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
  }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  section[id] {
    scroll-mt: 5rem;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overscroll-behavior: none;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }

  .dark ::-webkit-scrollbar {
    background-color: #0f172a; /* slate-900 */
  }
</style>
